{
    "compilerOptions": {
        "target": "ES2018",
        "module": "CommonJS",
        "declaration": true,
        "noEmit": true,
        "lib": ["ES2018", "DOM"],
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "jsx": "react",
        "allowJs": true,
        "stripInternal": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/types/**/*.d.ts"]
}
